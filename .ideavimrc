set number relativenumber
set idearefactormode=keep
set ideajoin
set surround
set easymotion
set visualbell
set noerrorbells
set scrolloff=8
set ignorecase smartcase

let mapleader = " "
nnoremap \e :e ~/.ideavimrc<CR>
nnoremap \r :action IdeaVim.ReloadVimRc.reload<CR>
nnoremap <c-z> :action ToggleDistractionFreeMode<CR>

" move lines up/down
nnoremap <C-j> :m +1<CR>
nnoremap <C-k> :m -2<CR>
inoremap <C-j> <Esc>:m +1<CR>gi
inoremap <C-k> <Esc>:m -2<CR>gi

" system clipboard
vmap <leader>y "+y
vmap <leader>d "_d
nmap <leader>d "_d
nmap <leader>y "+y
nmap <leader>p "+p
nmap <leader>P "+P
vmap <leader>p "+p
vmap <leader>P "+P


nnoremap <C-t> :action ActivateTerminalToolWindow<CR>
nnoremap <leader>t :action Terminal.OpenInTerminal<CR>

" actions
nmap <leader>pv <action>(CloseEditor)
nmap <leader>i <action>(Generate)
nmap <leader>m <action>(Git.Menu)
nmap D <action>(ShowErrorDescription)

nnoremap <leader>r :action RecentFiles<CR>
nnoremap <leader>l :action RecentLocations<CR>
nnoremap <leader>h  :action LocalHistory.ShowHistory<CR>
nnoremap <leader>s :action FileStructurePopup<CR>


nmap [m <action>(MethodUp)
nmap ]m <action>(MethodDown)
nnoremap ]d :action GotoNextError<CR>
nnoremap [d :action GotoPreviousError<CR>
nnoremap ]c :action VcsShowNextChangeMarker<CR>
nnoremap [c :action VcsShowPrevChangeMarker<CR>
nnoremap <C-o> :action Back<CR>
nnoremap <C-i> :action Forward<CR>


nmap <C-r>f <action>(RefactoringMenu)
nmap gi <action>(GotoImplementation)
nmap gD <action>(GotoSuperMethod)
nnoremap gc :action GotoClass<CR>

" search
set incsearch
nnoremap <leader>ff :action FindInPath<CR>
nnoremap <leader>fa :action GotoAction<CR>
nnoremap <leader>pf :action GotoFile<CR>
nnoremap <leader>fu :action FindUsages<CR>
nnoremap <leader>fs :action GotoSymbol<CR>
nnoremap <leader>fU :action HighlightUsagesInFile<CR>

" ai
nnoremap <leader>qa :action com.github.simiacryptus.aicoder.EditorMenu<CR>
vmap <leader>qa :action com.github.simiacryptus.aicoder.EditorMenu<CR>

set NERDTree
let g:NERDTreeMapActivateNode='l'
let g:NERDTreeMapJumpParent='h'

set multiple-cursors
Plug 'terryma/vim-multiple-cursors'
map mn <A-n>
map ms <A-x>
map mp <A-p>